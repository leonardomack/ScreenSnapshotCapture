<Window x:Class="ScreenSnapshotCapture.Software.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screen Snapshot Capture" Height="160" Width="380" StateChanged="Window_StateChanged" Icon="Resources/Images/ico.ico">
    <Grid>
        <TextBox x:Name="TextBoxScreenshotsFolder" TextWrapping="NoWrap" HorizontalAlignment="Left" Height="23" Margin="10,7,0,0" VerticalAlignment="Top" Width="186" IsEnabled="False"/>
        <Button x:Name="ButtonChoseFolder" Content="Screenshot's folder" HorizontalAlignment="Left" Margin="201,7,0,0" VerticalAlignment="Top" Width="150" Click="ButtonChoseFolder_Click"/>
        <Label Content="Screenshots delay in milliseconds" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxTimeMilliseconds" HorizontalAlignment="Left" Height="23" Margin="10,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Text="1000"/>
        <Button x:Name="ButtonStart" Content="Start" HorizontalAlignment="Left" Margin="10,97,0,0" VerticalAlignment="Top" Width="75" Click="ButtonStart_Click"/>
        <Button x:Name="ButtonStop" Content="Stop" HorizontalAlignment="Left" Margin="121,97,0,0" VerticalAlignment="Top" Width="75" Click="ButtonStop_Click" IsEnabled="False"/>
    </Grid>
</Window>
